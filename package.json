{
  "name": "hexo-site",
  "version": "0.0.0",
  "private": true,
  "hexo": {
    "version": "3.3.8"
  },
  "dependencies": {
    "hexo": "^3.2.0",
    "hexo-deployer-git": "^0.3.1",
    "hexo-generator-archive": "^0.1.4",
    "hexo-generator-category": "^0.1.3",
    "hexo-generator-index": "^0.2.0",
    "hexo-generator-tag": "^0.2.0",
    "hexo-prism-plugin": "^2.2.0",
    "hexo-renderer-ejs": "^0.3.0",
    "hexo-renderer-marked": "^0.3.0",
    "hexo-renderer-stylus": "^0.3.1",
    "hexo-server": "^0.2.0",
    "npm-run-all": "^4.1.1"
  },
  "scripts": {
    "start": "npm-run-all -p start:hexo start:theme",
    "start:hexo": "hexo server",
    "start:theme": "cd themes/gabrieluizramos && webpack --watch",
    "deploy": "npm-run-all -s deploy:theme deploy:hexo",
    "deploy:theme": "cd themes/gabrieluizramos && npm run deploy",
    "deploy:hexo": "hexo clean && hexo generate && hexo deploy"
  }
}
